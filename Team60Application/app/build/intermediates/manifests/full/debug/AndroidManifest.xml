<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jackieelliott.team60application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.jackieelliott.team60application.controllers.WelcomePageActivity"
            android:label="Team60Application" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jackieelliott.team60application.controllers.RegisterUserActivity"
            android:label="Team60Application" >
        </activity>
        <activity
            android:name="com.example.jackieelliott.team60application.controllers.LoginActivity"
            android:label="Team60Application" >
        </activity>
        <activity
            android:name="com.example.jackieelliott.team60application.controllers.HomeActivity"
            android:label="Team60Application" >
        </activity>
    </application>

</manifest>